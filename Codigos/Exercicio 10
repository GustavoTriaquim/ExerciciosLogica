programa {
  inclua biblioteca Texto --> texto

  funcao inicio() {
    cadeia palavra
    caracter letra
    inteiro vogais = 0

    escreva("Digte uma palavra: ")
    leia(palavra)

    para (inteiro i = 0; i <= texto.numero_caracteres(palavra) - 1; i++) {
      letra = texto.obter_caracter(palavra, i)
      
      se (letra == "a" ou letra == "e" ou letra == "i" ou letra == "o" ou letra == "u") {
        vogais = vogais + 1
      }
    }

    escreva("A palavra ", palavra, " tem ", vogais, " vogais.")
  }
}

//USO DE BIBLIOTECA TEXTO PARA RESOLUCAO DESSE EXERCICIO
